@model IEnumerable<MenuTakip.Models.MenuModel>
    @{
        ViewBag.Title = "Show";

    }

 

    <div class="colorlib-menu">
        <div class="container">
            <div class="colorlib-menu-2">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-center animate-box intro-heading">
                        <span class="icon"><i class="flaticon-cutlery"></i></span>
                        <h2>Lutong Bahay Menu</h2>
                        <p>Even the all-powerful Pointing has no control about the blind texts it is an almost unorthographic life</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 animate-box">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <ul class="nav nav-tabs text-center" role="tablist">
                                    <li><a href="~/ContentMenu/#main" aria-controls="mains" role="tab" data-toggle="tab">Menu</a></li>

                                </ul>
                            </div>
                        </div>
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="main">
                                <div class="row">
                                    <div class="col-md-6">
                                        <ul class="menu-dish">
                                            @foreach (var item in Model)
                                            {

                                                <li>

                                                    <figure class="dish-entry">
                                                        @using (Html.BeginForm("Sec", "Home", new { id = User.Identity.Name }))
                                                        {
                                                            <a class="btn btn-info" href="@Url.Action("price","Home", new { id = item.menuFiyat })">Sec</a>



                                                        }
                                                        @*<a class="btn btn-info" href="@Url.Action("price","Home", new { id = item.menuFiyat })">Öde</a>*@

                                                        @*<div class="dish-img" style="background-image: url(/ContentMenu/images/dish-3.jpg);"></div>*@
                                                    </figure>
                                                    <div class="text">

                                                        <span class="price">@item.menuFiyat TL</span>


                                                        <h3>@item.menuBaslik</h3>
                                                        @foreach (var yemek in item.Yemeks)
                                                        {

                                                            <div style="display:inline" class="capitalize">@yemek.yemekAd.</div>
                                                        }
                                                    </div>

                                                </li>

                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>

                          
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

