        <td>
            @Html.DisplayFor(modelItem => item.tarih)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menuFiyat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menuBaslik)
        </td>

