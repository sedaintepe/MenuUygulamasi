
@model MenuTakip.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@*<script src="~/js/pages/forms/advanced-form-elements.js"></script>
<script src="~/plugins/bootstrap-select/js/bootstrap-select.js"></script>*@
@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Şifre Değiştir</h2>
                    <div class="header-dropdown m-r--5">
                        <input type="submit" value="Kaydet" class="btn btn-primary waves-effect">
                        @if (Model.IsAdmin)
                        {
                            <button type="button" class="btn btn-primary waves-effect" onclick="location.href='@Url.Action("List", "Account")'">Listeye Geri Dön</button>
                        }
                    </div>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Şifre" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Şifreyi onayla " })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
            <!-- #END# Input -->
}