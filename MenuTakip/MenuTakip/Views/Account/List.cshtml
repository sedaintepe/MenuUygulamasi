
@model IEnumerable<MenuTakip.Models.RegisterViewModel>

@{
    ViewBag.Title = "Index";
}
<!-- Exportable Table -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    KULLANICI LİSTESİ
                </h2>
               
                <div class="header-dropdown m-r--5">
                    <button type="button" class="btn btn-primary waves-effect" onclick="location.href='@Url.Action("Register", "Account")'">Yeni Ekle</button>
                </div>
               
            </div>
            <div class="body">
                <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.name)</th>
                            <th>@Html.DisplayNameFor(model => model.soyad)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.UserName)</th>
                            @*<th>@Html.DisplayNameFor(model => model.maas)</th>
                            <th>@Html.DisplayNameFor(model => model.kartNo)</th>
                            <th>@Html.DisplayNameFor(model => model.tc)</th>
                            <th>@Html.DisplayNameFor(model => model.cep)</th>
                            <th>@Html.DisplayNameFor(model => model.adres)</th>*@
                           
                        </tr>
                    </thead>
                   
                    <tbody>
                        @foreach (var item in Model)
                        {
                                if (item.IsManager==true)
                            {
                                <tr>
                                    <td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.name)</a></td>
                                    <td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.soyad)</a></td>
                                    <td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Email)</a></td>
                                    <td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.UserName)</a></td>
                                    @*<td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.maas)</a></td>
                                    <td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.kartNo)</a></td>
                                    <td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.tc)</a></td>
                                    <td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.cep)</a></td>
                                    <td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.adres)</a></td>*@

                                </tr>
                        }
                                else
                                {
                                       <tr>
                                    <td><a href="@Url.Action("Details", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.name)</a></td>
                                    <td><a href="@Url.Action("Edit", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.soyad)</a></td>
                                    <td><a href="@Url.Action("Edit", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Email)</a></td>
                                    <td><a href="@Url.Action("Edit", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.UserName)</a></td>
                                    @*<td><a href="@Url.Action("Edit", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.maas)</a></td>
                                    <td><a href="@Url.Action("Edit", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.kartNo)</a></td>
                                    <td><a href="@Url.Action("Edit", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.tc)</a></td>
                                    <td><a href="@Url.Action("Edit", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.cep)</a></td>
                                    <td><a href="@Url.Action("Edit", "Account", new { id = item.Id })">@Html.DisplayFor(modelItem => item.adres)</a></td>*@

                                </tr>
                             
                             
                                    
                                }
                           

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
